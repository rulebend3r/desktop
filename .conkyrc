alignment top_right
imlib_cache_size 0
background yes
border_width 1
cpu_avg_samples 2
default_color cornflowerblue
default_outline_color black
default_shade_color black
double_buffer yes
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades yes
gap_x 5
gap_y 32
maximum_width 308
max_port_monitor_connections 64
max_specials 512
max_user_text 16384
minimum_size 280 5
net_avg_samples 2
no_buffers yes
out_to_console no
own_window_colour black
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_transparent yes
own_window_type desktop
own_window yes
stippled_borders 2
update_interval 1.0
uppercase no
use_spacer none
use_xft no
xftalpha 0.8
xftfont  Bitstream Vera Sans Mono:size=9
font 5x11
total_run_times 0
override_utf8_locale no

# stuff after 'TEXT' will be formatted on screen

TEXT
${color #5b6dad}$nodename-XFCE4    ${alignc}$sysname $kernel ${alignr}${time %l:%M %p}
${color #5b6dad}$hr
